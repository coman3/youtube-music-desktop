{
  "extends": "tslint:recommended",
  
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": false,
    "one-line": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "curly": false,
    "object-literal-sort-keys": false,
    "no-empty": false,
    "no-trailing-whitespace": false
  },

  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}